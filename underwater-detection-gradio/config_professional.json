      "YOLOv8s": "../yolov8s/runs/detect_train/weights/best.pt"
    },
    "fallback_models": {
      "YOLOv8n": "yolov8n.pt",
      "YOLOv8s": "yolov8s.pt"
    },
    "model_info": {
      "YOLOv8n": {
        "description": "Nano model - fastest inference",
        "parameters": "3.2M",
        "recommended_use": "Real-time applications"
      },
      "YOLOv8s": {
        "description": "Small model - balanced speed/accuracy", 
        "parameters": "11.2M",
        "recommended_use": "Production deployments"
      }
    }
  },
  
