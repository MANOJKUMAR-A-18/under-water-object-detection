{
  "app_config": {
    "title": "Professional Underwater Object Detection System",
    "version": "2.0.0",
    "author": "AI Detection Lab",
    "description": "Advanced AI-powered underwater object detection with professional analytics",
    "max_file_size": "50MB",
    "supported_formats": [".jpg", ".jpeg", ".png", ".bmp", ".tiff"],
    "max_concurrent_users": 10
  },
  
  "detection_config": {
    "default_confidence_threshold": 0.25,
    "default_iou_threshold": 0.45,
    "max_detections_per_image": 100,
    "min_object_size": 10,
    "enable_tracking": true,
    "save_detection_history": true,
    "max_history_records": 1000
